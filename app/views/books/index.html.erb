<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= search_form_for @q do |f| %> <!-- esto va a crear los espacios para insertar inputs que necesitamos para la query-->
  <%= f.label :status_eq, "Status" %>
  <%= f.select :status_eq, options_for_select(Book.statuses ,  @q.status_eq),
   {},
   {class: "form-control"} %>
  <%= f.submit "Search"%>
<% end %>




<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th>Author</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
